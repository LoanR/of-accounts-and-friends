<% publish_to @path do %>
  $("#friend_name_<%= @current_board.id %>").blur();
  $("#friend_name_<%= @current_board.id %>").val('');
  if (<%= @new_friend.persisted? %>) {
    var newFriendNum = <%= @new_friend.board.friends.count %> + 1;
    $('#board_<%= @new_friend.board.id %>_friends').append("<%= j render(@new_friend) %>");
    $('.friend:nth-child(' + newFriendNum + ')').hide().slideDown();

    changeBoardAverage(<%= @new_friend.board.id %>, <%= @new_friend.board.get_friends_ids %>);
    friendsBalance(<%= @new_friend.board.id %>, <%= @new_friend.board.get_friends_ids %>);
  }
<% end %>
